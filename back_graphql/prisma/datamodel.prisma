type User {
  id: ID! @id
  email: String! @unique
  name: String
  posts: [Post!]!
}

type Post {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  published: Boolean! @default(value: false)
  title: String!
  content: String
  author: User!
}

type Product {
  id: ID! @id
  label: String!
  price: Int!
  description: String!
  published: Boolean! @default(value: true)
  owner: User!
}
